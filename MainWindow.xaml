<Window x:Class="learning_pract.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding ElementName=MainFrame, Path=Content.Title}" Height="600" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="img\gragient.png" />
    </Window.Background>
    <Grid>
        <Frame Name="MainFrame" Background="Transparent" Margin="60" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>